<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaisentech.terminal">

    <!-- Required permission for Shizuku -->
    <uses-permission android:name="moe.shizuku.manager.permission.SHIZUKU" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="Kaisen Terminal"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="moe.shizuku.api.ShizukuService"
            android:exported="false"
            android:permission="moe.shizuku.manager.permission.API_V2" />

    </application>

</manifest>
